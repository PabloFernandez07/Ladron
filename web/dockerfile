# ==========================================
# Dockerfile - Backend (Bot + API)
# ==========================================
FROM node:20-slim

RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY package*.json ./

RUN npm ci --only=production

COPY . .

RUN mkdir -p logs registros registros_ventas

EXPOSE 3000

ENV NODE_ENV=production

CMD ["node", "src/index.js"]