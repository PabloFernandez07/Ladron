{
  "name": "discord-bot-mejorado",
  "version": "2.0.0",
  "description": "Bot de Discord para gestión de robos y ventas - Versión mejorada",
  "main": "src/index.js",
  "scripts": {
    "start": "node scripts/start-all.js",
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm start\" \"cd web && npm run dev\"",
    "bot": "node src/index.js",
    "deploy": "node scripts/deploy-all.js",
    "migrate": "node src/database/migrate.js",
    "init-data": "node scripts/init-data.js",
    "check": "node scripts/check-env.js",
    "check-data": "node scripts/check-data.js",
    "test": "jest",
    "lint": "eslint src/"
  },
  "keywords": [
    "discord",
    "bot",
    "discord.js",
    "roleplay",
    "gta"
  ],
  "author": "Tu Nombre",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "dotenv-safe": "^9.1.0",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "src/**/*.test.js",
      "logs/",
      "data/"
    ],
    "delay": "2000"
  }
}